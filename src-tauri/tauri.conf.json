{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "marcador-karate",
  "version": "0.1.0",
  "identifier": "com.jhm_l.marcador-karate",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Marcador Kenshukan",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  },
  "plugins": {
    "sql": {
      "scope": {
        "allowed": [
          {
            "database": "kata_history.db",
            "allow": ["SELECT", "INSERT", "UPDATE", "DELETE"]
          }
        ]
      }
    }
  }
}
